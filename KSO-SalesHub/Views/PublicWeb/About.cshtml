@{
	Layout = "_LayoutCodex";
}

<div class="container-xxl bg-white p-0">

	<!-- Navbar & Hero Start -->
	<div class="container-xxl position-relative p-0">

		@Html.Partial("_NavbarCodex")

		<div class="container-xxl bg-custom-1 hero-header">
			<div class="container my-3 py-0 px-lg-5">
				<div class="row g-5 py-0">
					<div class="col-12 text-center">
						<h1 class="text-white animated slideInDown">Tentang Kami</h1>
						<hr class="bg-white mx-auto mt-0" style="width: 90px;">
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Navbar & Hero End -->
	<!-- About Start -->
	<div class="container-xxl py-5">
		<div class="container py-5 px-lg-5">
			<div class="row g-5 align-items-center">
				<div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
					<p class="section-title text-secondary">Tentang Kami<span></span></p>
					<h1 class="mb-5">Mitra Terpercaya di Industri Ritel Bahan Bakar dengan Pengalaman hampir 20 Tahun</h1>
					<p class="mb-4">Dengan lebih dari dua dekade pengalaman, PT Pertamina Retail telah berkembang menjadi pemimpin dalam <b> industri ritel bahan bakar dan non-bahan bakar</b> di Indonesia. Kami berkomitmen untuk terus berinovasi dan memberikan nilai tambah bagi mitra kami melalui skema kerjasama yang saling menguntungkan dan teknologi digital terkini.</p>
					<div class="skill mb-4">
						<div class="d-flex justify-content-between">
							<p class="mb-2">Inovasi & Transformasi Bisnis</p>
							<p class="mb-2">85%</p>
						</div>
						<div class="progress">
							<div class="progress-bar bg-custom-1" role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
					</div>
					<div class="skill mb-4">
						<div class="d-flex justify-content-between">
							<p class="mb-2">Kerjasama & Kemitraan</p>
							<p class="mb-2">90%</p>
						</div>
						<div class="progress">
							<div class="progress-bar bg-secondary" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
					</div>
					<div class="skill mb-4">
						<div class="d-flex justify-content-between">
							<p class="mb-2">Pengembangan Infrastruktur Digital</p>
							<p class="mb-2">95%</p>
						</div>
						<div class="progress">
							<div class="progress-bar bg-dark" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<img class="img-fluid wow zoomIn" data-wow-delay="0.5s" src="~/assets/htmlcodex/img/about.png">
				</div>
			</div>
		</div>
	</div>
	<!-- About End -->
	<!-- Facts Start -->
	<div class="container-xxl bg-custom-1 fact py-5 wow fadeInUp" data-wow-delay="0.1s">
		<div class="container py-5 px-lg-5">
			<div class="row g-4">
				<div class="col-md-6 col-lg-3 text-center wow fadeIn" data-wow-delay="0.1s">
					<i class="fa fa-certificate fa-3x text-secondary mb-3"></i>
					<p><h1 class="text-white mb-2 d-inline" data-toggle="counter-up">19</h1></p>
					<p class="text-white mb-0">Tahun Pengalaman</p>
				</div>
				<div class="col-md-6 col-lg-3 text-center wow fadeIn" data-wow-delay="0.3s">
					<i class="fa fa-users-cog fa-3x text-secondary mb-3"></i>
					<p><h1 class="text-white mb-2 d-inline" data-toggle="counter-up">100</h1> <h1 class="text-white d-inline"> +</h1></p>
					<p class="text-white mb-0">Anggota Tim Profesional</p>
				</div>
				<div class="col-md-6 col-lg-3 text-center wow fadeIn" data-wow-delay="0.5s">
					<i class="fa fa-users fa-3x text-secondary mb-3"></i>
					<p><h1 class="text-white mb-2 d-inline" data-toggle="counter-up">500</h1> <h1 class="text-white d-inline"> +</h1></p>
					<p class="text-white mb-0">Mitra dan Klien Puas</p>
				</div>
				<div class="col-md-6 col-lg-3 text-center wow fadeIn" data-wow-delay="0.7s">
					<i class="fa fa-check fa-3x text-secondary mb-3"></i>
					<p><h1 class="text-white mb-2 d-inline" data-toggle="counter-up">500</h1> <h1 class="text-white d-inline"> +</h1></p>
					<p class="text-white mb-0">Proyek Terselesaikan</p>
				</div>
			</div>
		</div>
	</div>
	<!-- Facts End -->
	<!-- Footer Start -->
	@Html.Partial("_FooterCodex")
	<!-- Footer End -->
	<!-- Back to Top -->
	<a href="#" class="btn btn-lg btn-secondary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>

